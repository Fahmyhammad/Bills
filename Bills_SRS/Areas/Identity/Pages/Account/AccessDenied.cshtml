@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<div class="container mt-5 text-center">
    <h1 class="text-danger mb-3">@ViewData["Title"]</h1>
    <p class="text-danger mb-4">You do not have access to this resource.</p>
    <img src="~/img/access-denied.png" alt="Access Denied" class="img-fluid" style="max-width: 400px;" />
    <p class="mt-4">
        If you believe this is an error, please contact support.
    </p>
</div>
