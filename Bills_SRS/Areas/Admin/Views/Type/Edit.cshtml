@using bill_Entities.Models
@using bill_Entities.Repoistory
@using bill_Entities.ViewModel
@model TypeViewModel;
@inject ICompanyRepoistory comp;
@{
    ViewBag.PageTitle = @SharedLocalizer["TypeManagement"];
    ViewBag.CardTitle = @SharedLocalizer["EditData"];
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Type" method="post">
            <input hidden asp-for="Id" />
            <div class="mb-3">
                <label class="form-label"> @SharedLocalizer["CompanyName"];</label>
                <select asp-for="CompanyId" class="form-control">
                    <option disabled selected>--Select Company--</option>
                    @foreach(var item in comp.GetAll())
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">@SharedLocalizer["TypeName"]</label>
                <input asp-for="TypeName" class="form-control" />
                <span asp-validation-for="TypeName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">@SharedLocalizer["NotesCompent"]</label>
                <textarea asp-for="Notes" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <button type="submit" asp-area="Admin" asp-action="Edit" asp-controller="Type" class="btn btn-outline-success" style="width:120px;height:40px">@SharedLocalizer["btnEdit"]</button> ||
                <a class="btn btn-outline-danger" style="width:120px;height:40px" asp-action="Index" asp-controller="Type">@SharedLocalizer["btnGoHome"]</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
