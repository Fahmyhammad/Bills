@model tableItem

@{
    ViewBag.PageTitle = @SharedLocalizer["ItemManagement"];
    ViewBag.CardTitle = "Delete Item";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteItem" method="post">
            <input hidden asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label>@SharedLocalizer["ItemName"]</label>
                <input asp-for="ItemName" disabled class="form-control" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>@SharedLocalizer["SellingPrice"]</label>
                <input asp-for="SellingPrice" disabled class="form-control" />
                <span asp-validation-for="SellingPrice" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>@SharedLocalizer["BuyingPrice"]</label>
                <input asp-for="BuyingPrice" disabled class="form-control" />
                <span asp-validation-for="BuyingPrice" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label @SharedLocalizer["NotesCompent"]></label>
                <input asp-for="Notes" disabled class="form-control" />
            </div>
            <div class="mb-3">
                <button type="submit" asp-area="Admin" asp-action="DeleteItem" asp-controller="Item" class="btn btn-outline-danger" style="width:120px; height:40px;">@SharedLocalizer["btnDelete"]</button> ||
                <a asp-action="Index" asp-controller="Item" class="btn btn-outline-success" style="width:120px; height:40px;">@SharedLocalizer["btnGoHome"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}