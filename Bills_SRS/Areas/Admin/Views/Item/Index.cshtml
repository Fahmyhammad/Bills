@using bill_Entities.Models
@using bill_Entities.ViewModel
@model IEnumerable<ItemViewModel>

@{
    ViewBag.PageTitle = @SharedLocalizer["ItemManagement"];
    ViewBag.CardTitle = @SharedLocalizer["ItemList"];
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <div class="row mb-3">
        <div class="col-md-4 col-12">
            <a class="btn btn-outline-primary btn-sm py-1 px-4 mt-0 animate__animated animate__fadeInUp" style="width: 100%;" asp-controller="Item" asp-action="Create">@SharedLocalizer["btnAdd"]</a>
        </div>
        
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>

                    <th scope="col">@SharedLocalizer["CompanyName"]</th>
                    <th scope="col">@SharedLocalizer["TypeName"]</th>
                    <th scope="col">@SharedLocalizer["ItemName"]</th>
                    <th scope="col">@SharedLocalizer["SellingPrice"]</th>
                    <th scope="col">@SharedLocalizer["BuyingPrice"]</th>
                    <th scope="col">@SharedLocalizer["NotesCompent"]</th>
                    <th scope="col"></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.company.Name</td>
                        <td>@item.type.TypeName</td>
                        <td>@item.ItemName</td>
                        <td>@item.SellingPrice</td>
                        <td>@item.BuyingPrice</td>
                        <td>@Html.Raw(item.Notes)</td>
                        <td>
                            <a href="/Admin/Item/Edit/@item.Id" class="btn btn-outline-success btn-sm">@SharedLocalizer["btnEdit"]</a>
                            <a href="/Admin/Item/Delete/@item.Id" class="btn btn-outline-danger btn-sm">@SharedLocalizer["btnDelete"]</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
