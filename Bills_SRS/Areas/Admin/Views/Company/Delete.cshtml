@model Company

@{
    ViewBag.PageTitle = "Company Management";
    ViewBag.CardTitle = "Delete Company";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteComp" method="post">
            <input hidden asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" disabled class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Notes"></label>
                <input asp-for="Notes" disabled class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="submit" asp-area="Admin" asp-action="DeleteComp" asp-controller="Company" class="btn btn-outline-danger" style="width:120px; height:40px;">Delete</button> ||
                <a asp-action="Index" asp-controller="Company" class="btn btn-outline-success" style="width:120px; height:40px;">Go To Home</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}