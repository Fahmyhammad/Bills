@using bill_Entities.Models
@using bill_Entities.ViewModel
@model IEnumerable<Company>

@{
    ViewBag.PageTitle = "Company Management";
    ViewBag.CardTitle = "Company List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <div class="row mb-3">
        <div class="col-md-4 col-12">
            <a class="btn btn-outline-primary btn-sm py-1 px-4 mt-0 animate__animated animate__fadeInUp" style="width: 100%;" asp-controller="Company" asp-action="Create">Add Company</a>
        </div>
        
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Notes</th>
                    <th scope="col"></th>
                  
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@Html.Raw(item.Notes)</td>
                        <td>
                            <a href="/Admin/Company/Edit/@item.Id" class="btn btn-outline-success btn-sm">Edit</a>
                            <a href="/Admin/Company/Delete/@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
