@using bill_Entities.ViewModel
@{
    var Culture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
}
@inject IStringLocalizer<SharedResource> SharedLocalizer

@model CompanyViewModel;
@{
    ViewBag.PageTitle = @SharedLocalizer["CompanyManagement"];
    ViewBag.CardTitle = @SharedLocalizer["EditData"];
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input hidden asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label>@SharedLocalizer["TextName"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>@SharedLocalizer["NotesCompent"]</label>
                <textarea asp-for="Notes" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <button type="submit" asp-area="Admin" asp-action="Edit" asp-controller="Company" class="btn btn-outline-success" style="width:120px; height:40px;">@SharedLocalizer["btnEdit"]</button> ||
                <a asp-action="Index" asp-controller="Company" class="btn btn-outline-danger" style="width:120px; height:40px;">@SharedLocalizer["btnGoHome"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}