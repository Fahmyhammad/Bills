@{
    ViewBag.PageTitle = "Admin";
    ViewBag.CardTitle = "Manage";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="row match-height">
    <div class="col-xl-4 col-lg-6 col-12">
        <div class="card bg-success" style="height: 145px;">
            <div class="card-body">
                <div class="px-3 py-3">
                    <div class="row text-white">
                        <div class="col-6">
                            <h1><i class="fa fa-usd background-round text-white p-2 font-medium-3"></i></h1>
                            <h4 class="pt-1 m-0 text-white">Count: @ViewBag.Bills</h4>
                        </div>
                        <div class="col-6 text-right pl-0">
                            <h4 class="text-white mb-2">Bills</h4>
                            <span>More info</span>
                            <br>
                            <span><a href="/Admin/SalesInvoice/Index" class="text-white"><i class="fas fa-arrow-circle-right"></i></a></span>
                            <br>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-lg-6 col-12">
        <div class="card bg-danger" style="height: 145px;">
            <div class="card-body">
                <div class="px-3 py-3">
                    <div class="row text-white">
                        <div class="col-6">
                            <h1><i class="fa fa-building-o background-round text-white p-2 font-medium-3"></i></h1>
                            <h4 class="pt-1 m-0 text-white">Count: @ViewBag.Company</h4>
                        </div>
                        <div class="col-6 text-right pl-0">
                            <h4 class="text-white mb-2">Companies</h4>
                            <span>More info</span>
                            <br>
                            <span><a href="/Admin/Company/Index" class="text-white"><i class="fas fa-arrow-circle-right"></i></a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-lg-6 col-12">
        <div class="card bg-info" style="height: 145px;">
            <div class="card-body">
                <div class="px-3 py-3">
                    <div class="row text-white">
                        <div class="col-6">
                            <h1><i class="fa fa-line-chart background-round text-white p-2 font-medium-3"></i></h1>
                            <h4 class="pt-1 m-0 text-white">Count: @ViewBag.Units </h4>
                        </div>
                        <div class="col-6 text-right pl-0">
                            <h4 class="text-white mb-2">Units</h4>
                            <span>More info</span>
                            <br>
                            <span><a href="/Admin/Unit/Index" class="text-white"><i class="fas fa-arrow-circle-right"></i></a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
